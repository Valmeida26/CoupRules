<resources>

    <!-- Tema da aplicação -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/material_dynamic_primary0</item>
        <item name="android:colorPrimaryDark">@color/cardview_dark_background</item>
        <item name="android:colorAccent">@color/cardview_light_background</item>
        <!-- Cor de fundo da Toolbar -->
        <item name="colorPrimary">#2D303A</item>
        <item name="colorPrimaryDark">#2D303A</item>
        <item name="colorAccent">#FF4081</item>
    </style>

    <!-- Estilo do título da Toolbar -->
    <style name="ToolbarStyle">
        <item name="android:titleTextColor">@android:color/white</item> <!-- Título branco -->
        <item name="android:background">@color/cardview_light_background</item> <!-- Cor de fundo da toolbar -->
        <item name="android:gravity">center</item> <!-- Centraliza o título na Toolbar -->
        <item name="android:textAlignment">center</item> <!-- Alinha o texto ao centro -->
    </style>

    <!-- Estilo personalizado para o popup -->
    <style name="CustomPopupTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorPrimary">@android:color/background_light</item>  <!-- Cor do texto -->
        <item name="android:background">#03103C</item>  <!-- Cor de fundo -->
    </style>

</resources>
